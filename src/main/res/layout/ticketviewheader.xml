<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>

	<TextView
		android:id="@+id/tickettext"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text=""
		android:textSize = "17sp"
		android:fontFamily="sans-serif-thin"
		android:padding="10dp"
		/>

	<View 
		android:background="#FFFFFF" 
		android:layout_centerVertical ="true"
		android:layout_width = "fill_parent"
		android:layout_height="1dip"
		android:layout_marginBottom="5dip"
		android:layout_marginTop="5dip"
		android:layout_alignParentTop="true"/>
	 
	<TextView
		android:id="@+id/reporter"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text=""
		android:fontFamily="sans-serif-thin"
		android:padding="10dp"
		/>

	<View 
		android:background="#FFFFFF" 
		android:layout_centerVertical ="true"
		android:layout_width = "fill_parent"
		android:layout_height="1dip"
		android:layout_marginBottom="5dip"
		android:layout_marginTop="5dip"
		android:layout_alignParentTop="true"/>
		
		
	<TextView
		android:id="@+id/place"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text=""
		android:fontFamily="sans-serif-thin"
		android:padding="10dp"
		/>

	<View 
		android:background="#FFFFFF" 
		android:layout_centerVertical ="true"
		android:layout_width = "fill_parent"
		android:layout_height="1dip"
		android:layout_marginBottom="5dip"
		android:layout_marginTop="5dip"
		android:layout_alignParentTop="true"/>



	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:fontFamily="sans-serif-thin"
		android:layout_height="wrap_content">

		<!--<Button-->
			<!--android:id="@+id/btclose"-->
			<!--android:layout_width="fill_parent"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:layout_weight="1"-->
			<!--android:text="@string/tick_close_button"-->
			<!--android:fontFamily="sans-serif-thin"-->
			<!--/>-->

		<ImageButton
			android:id="@+id/btclose"
			android:src="@drawable/thumb"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:height="10dp"
			android:scaleType="fitCenter"
			android:nestedScrollingEnabled="false"
			android:adjustViewBounds="true"
			android:layout_weight="1"
			android:background="@null" />

		<!--<Button-->
			<!--android:id="@+id/btsend"-->
			<!--android:layout_toRightOf="@+id/btclose"-->
			<!--android:layout_width="fill_parent"-->
			<!--android:layout_height="wrap_content"-->
			<!--android:layout_weight="1"-->
			<!--android:text="@string/tick_sendcomm_button"-->
			<!--android:fontFamily="sans-serif-thin"-->
			<!--/>-->

		<ImageButton
			android:id="@+id/btsend"
			android:src="@drawable/note"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:height="10dp"
			android:scaleType="fitCenter"
			android:nestedScrollingEnabled="false"
			android:adjustViewBounds="true"
			android:layout_weight="1"
			android:background="@null" />

	</LinearLayout>



	<EditText android:id="@+id/tcomment"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="textCapSentences"
		/>

	<CheckBox android:id="@+id/checkemail"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-thin"
		android:text="@string/tick_sendemail_check" />


	<TextView
		android:id="@+id/ticketcomments"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text=""
		android:fontFamily="sans-serif-thin"
		/>
	

</LinearLayout>

